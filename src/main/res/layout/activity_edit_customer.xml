<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bignerdranch.android.customermanagment.EditCustomer">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/label_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Customer Photo"
        android:padding="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50px"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_photo"
        style="?android:textAppearanceLarge"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:text="@string/photo_btn"
        android:layout_below="@+id/label_photo"
        android:layout_alignRight="@+id/label_name"
        android:layout_alignEnd="@+id/label_name"
        android:layout_alignLeft="@+id/label_name"
        android:layout_alignStart="@+id/label_name"
        />

    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Customer Name"
        android:padding="24dp"
        android:textSize="50px"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/textbox_customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:imeActionId="@+id/lcustomer_name"
        android:imeActionLabel=""
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/label_name"
        android:layout_alignLeft="@+id/label_name"
        android:layout_alignStart="@+id/label_name"
        android:layout_alignRight="@+id/label_name"
        android:layout_alignEnd="@+id/label_name"/>

    <Button
        android:id="@+id/button_submit_customer"
        style="?android:textAppearanceLarge"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:text="@string/submit_btn"
        android:layout_below="@+id/label_name"
        android:layout_alignLeft="@+id/label_name"
        android:layout_alignStart="@+id/label_name"
        android:layout_marginTop="64dp"
        android:layout_alignRight="@+id/label_name"
        android:layout_alignEnd="@+id/label_name"/>

</RelativeLayout>
