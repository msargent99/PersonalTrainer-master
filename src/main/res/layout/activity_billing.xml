<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bignerdranch.android.customermanagment.BillingActivity">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/label_billing_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Customer Name"
        android:padding="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50px"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/textbox_billing_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:imeActionId="@+id/lcustomer_name"
        android:imeActionLabel=""
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/label_billing_expiration"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/label_billing_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit Card"
        android:padding="12dp"
        android:textSize="50px"
        android:textStyle="bold"
        android:layout_below="@+id/textbox_billing_credit"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/textbox_billing_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:imeActionId="@+id/customer_name"
        android:imeActionLabel=""
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/label_billing_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <TextView
        android:id="@+id/label_billing_expiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiration Date"
        android:padding="12dp"
        android:textSize="50px"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/textbox_billing_experation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:imeActionId="@+id/lcustomer_name"
        android:imeActionLabel=""
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/textbox_billing_credit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/label_billing_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security Code"
        android:padding="12dp"
        android:textSize="50px"
        android:textStyle="bold"
        android:layout_below="@+id/textbox_billing_name"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/textbox_billing_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:imeActionId="@+id/lcustomer_name"
        android:imeActionLabel=""
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/label_billing_security"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/button_billing_submit"
        style="?android:textAppearanceLarge"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/submit_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/button_billing_charge"
        style="?android:textAppearanceLarge"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/charge_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button_new_session"/>

</RelativeLayout>
